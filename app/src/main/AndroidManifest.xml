<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.wgu.dmass13.c196">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.sample.MentorListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.sample.MentorEditActivity" />
        <activity
            android:name=".view.HomeActivity"
            android:label="@string/title_activity_home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.assessment.Assessment_List"
            android:label="@string/title_activity_assessment_list"
            android:parentActivityName=".view.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.wgu.dmass13.c196.view.HomeActivity" />
        </activity>
        <activity
            android:name=".view.assessment.Assessment_Edit"
            android:label="@string/title_activity_assessment__edit"
            android:parentActivityName=".view.assessment.Assessment_List">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.wgu.dmass13.c196.view.assessment.Assessment_List" />
        </activity>
    </application>

</manifest>